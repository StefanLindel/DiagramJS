{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build/",
    "module": "es6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "target": "es6"
  },
  "exclude": [
    "build",
		"dist",
    "node_modules"
  ]
}
