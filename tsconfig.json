{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "dist/",
    "sourceRoot": "src/",
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "target": "es5",
    "pretty": true
  },
	"include": [
		"src/**/*.ts"
	],
  "exclude": [
    "dist",
    "node_modules",
	"demo"
  ]
}
