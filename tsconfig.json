{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build/",
    "module": "es6",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "target": "es6",
    "pretty": true
  },
	"include": [
		"src/**/*.ts"
	],
  "exclude": [
    "build",
    "dist",
    "node_modules"
  ]
}
